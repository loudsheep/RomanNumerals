<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RomanNumerals.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Numbers converer" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="UserInputEntry" TextChanged="UserInputEntry_TextChanged" Keyboard="Numeric" Margin="0, 20, 0, 20"/>
        <Label Text="Number in Roman Numerals: " FontSize="20" HorizontalOptions="Center"/>
        <Label x:Name="ResultLabel" Text="" FontSize="15" HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>
